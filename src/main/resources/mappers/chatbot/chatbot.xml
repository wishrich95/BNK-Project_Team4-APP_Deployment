<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.busanbank.mapper.ChatbotMapper">
    <select id="findRelatedContents" resultType="kr.co.busanbank.dto.ChatbotDTO">
        SELECT content
        FROM chatbot
        WHERE
        <foreach collection="keywords" item="kw" separator=" OR ">
            keyword LIKE '%' || #{kw} || '%'
        </foreach>
        ORDER BY createdat DESC
        FETCH FIRST 2 ROWS ONLY
    </select>

</mapper>