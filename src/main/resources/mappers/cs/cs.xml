<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.co.busanbank.mapper.CsMapper">

    <!-- ===================== FAQ 목록 조회 ===================== -->
    <select id="selectFaqList"
            parameterType="kr.co.busanbank.dto.PageRequestDTO"
            resultType="kr.co.busanbank.dto.FaqDTO">

        SELECT
        faqId,
        groupCode,
        faqCategory,
        question,
        answer,
        createdAt,
        updatedAt,
        status
        FROM faq
        <where>

            <!--  검색어가 있을 때: 카테고리 상관없이 전체에서 검색 -->
            <if test="keyword != null and keyword != ''">
                <choose>
                    <!-- 질문만 검색 -->
                    <when test="searchType == 'question'">
                        AND question LIKE '%' || #{keyword} || '%'
                    </when>

                    <!-- 답변만 검색 -->
                    <when test="searchType == 'answer'">
                        AND answer LIKE '%' || #{keyword} || '%'
                    </when>

                    <!-- 질문 + 답변 검색 -->
                    <when test="searchType == 'qa'">
                        AND (question LIKE '%' || #{keyword} || '%'
                        OR  answer   LIKE '%' || #{keyword} || '%')
                    </when>

                    <!-- 그 외: 기본은 질문+답변 검색 -->
                    <otherwise>
                        AND (question LIKE '%' || #{keyword} || '%'
                        OR  answer   LIKE '%' || #{keyword} || '%')
                    </otherwise>
                </choose>
            </if>

            <!--  검색어가 없을 때만 카테고리 필터 적용 (TOP은 cate 없음) -->
            <if test="(keyword == null or keyword == '') 
                      and cate != null and cate != ''">
                AND faqCategory = #{cate}
            </if>

            <!--  사용중인 FAQ만 -->
            <if test="true">
                AND status = 'Y'
            </if>

        </where>

        <!--  정렬: 기본 = 최신순 -->
        ORDER BY faqId DESC

        <choose>
            <!-- TOP: cate 없음 + keyword 없음 → 최신 10개 -->
            <when test="(keyword == null or keyword == '')
                    and (cate == null or cate == '')">
                OFFSET 0 ROWS
                FETCH NEXT 10 ROWS ONLY
            </when>

            <!-- 카테고리 목록 / 검색 결과: 기존 페이징 -->
            <otherwise>
                OFFSET #{offset} ROWS
                FETCH NEXT #{size} ROWS ONLY
            </otherwise>
        </choose>
    </select>


    <!-- ===================== FAQ 총 갯수 ===================== -->
    <select id="selectFaqTotal"
            parameterType="kr.co.busanbank.dto.PageRequestDTO"
            resultType="int">

        SELECT COUNT(*)
        FROM faq
        <where>

            <!--  검색어 있을 때: 목록과 동일한 조건 -->
            <if test="keyword != null and keyword != ''">
                <choose>
                    <when test="searchType == 'question'">
                        AND question LIKE '%' || #{keyword} || '%'
                    </when>
                    <when test="searchType == 'answer'">
                        AND answer LIKE '%' || #{keyword} || '%'
                    </when>
                    <when test="searchType == 'qa'">
                        AND (question LIKE '%' || #{keyword} || '%'
                        OR  answer   LIKE '%' || #{keyword} || '%')
                    </when>
                    <otherwise>
                        AND (question LIKE '%' || #{keyword} || '%'
                        OR  answer   LIKE '%' || #{keyword} || '%')
                    </otherwise>
                </choose>
            </if>

            <!--  검색어 없을 때만 cate 필터 -->
            <if test="(keyword == null or keyword == '') 
                      and cate != null and cate != ''">
                AND faqCategory = #{cate}
            </if>

            <!--  STATUS = 'Y' -->
            <if test="true">
                AND status = 'Y'
            </if>

        </where>
    </select>


    <!-- ===================== FAQ 카테고리 코드 목록 ===================== -->
    <select id="selectFaqCategories"
            resultType="kr.co.busanbank.dto.CodeDetailDTO">

        SELECT
            groupCode,
            code,
            codeName
        FROM CODEDETAIL
        WHERE GROUPCODE = 'FAQ_TYPE'
          AND USEYN    = 'Y'
          AND STATUS   = 'Y'
        ORDER BY TO_NUMBER(CODE)
    </select>

    <!-- ===================== CS 카테고리 코드 목록 ===================== -->
    <select id="selectCodeList"
            parameterType="string"
            resultType="kr.co.busanbank.dto.CodeDetailDTO">
        SELECT
            groupCode,
            code,
            codeName
        FROM codedetail
        WHERE groupCode = #{groupCode}
          AND useYn = 'Y'
        ORDER BY code
    </select>

    <!-- ===================== 이메일 상담 등록 ===================== -->
    <insert id="insertEmailCounsel"
            parameterType="kr.co.busanbank.dto.EmailCounselDTO">
    INSERT INTO EMAILCOUNSEL (
        USERID,
        GROUPCODE,
        CSCATEGORY,
        TITLE,
        CONTENT,
        STATUS,
        CONTACTEMAIL,
        CREATEDAT
    ) VALUES (
        #{userId},
        #{groupCode},
        #{csCategory},
        #{title},
        #{content},
        NVL(#{status}, 'REGISTERED'),
        #{contactEmail},
        SYSDATE
    )
    </insert>

    <!-- ===================== 이메일상담 목록 ===================== -->
    <select id="selectEmailCounselList"
            parameterType="int"
            resultType="kr.co.busanbank.dto.EmailCounselDTO">

        SELECT
            e.ECOUNSELID,
            e.USERID,
            e.GROUPCODE,
            e.CSCATEGORY,
            d.CODENAME    AS csCategoryName,
            e.TITLE,
            e.CONTENT,
            e.STATUS,
            TO_CHAR(e.CREATEDAT, 'YYYY-MM-DD') AS createdAt,
            TO_CHAR(e.UPDATEDAT, 'YYYY-MM-DD') AS updatedAt,
            e.RESPONSE
        FROM EMAILCOUNSEL e
                 LEFT JOIN CODEDETAIL d
                           ON e.GROUPCODE = d.GROUPCODE
                               AND e.CSCATEGORY = d.CODE
        WHERE e.USERID = #{userId}
        ORDER BY e.ECOUNSELID DESC
    </select>

    <!-- ===================== 이메일상담 상세 ===================== -->
    <select id="selectEmailCounselById"
            resultType="kr.co.busanbank.dto.EmailCounselDTO">
        SELECT
            ecounselId,
            userId,
            groupCode,
            csCategory,
            title,
            content,
            status,
            createdAt,
            updatedAt,
            response
        FROM EMAILCOUNSEL
        WHERE ecounselId = #{ecounselId}
          AND userId    = #{userId}
    </select>


    <!-- ===================== 필요서류 목록 조회 ===================== -->
    <select id="selectDocuments"
            parameterType="kr.co.busanbank.dto.PageRequestDTO"
            resultType="kr.co.busanbank.dto.DocumentsDTO">

        SELECT
        docId,
        groupCode,
        docCategory,
        title,
        content,
        createdAt,
        updatedAt,
        status
        FROM DOCUMENTS
        <where>

            <!--  검색어가 있을 때: 카테고리 상관없이 전체에서 검색 -->
            <if test="keyword != null and keyword != ''">
                <choose>
                    <!-- 제목만 검색 -->
                    <when test="searchType == 'title'">
                        AND title LIKE '%' || #{keyword} || '%'
                    </when>

                    <!-- 내용만 검색 -->
                    <when test="searchType == 'content'">
                        AND content LIKE '%' || #{keyword} || '%'
                    </when>

                    <!-- 제목 + 내용 검색 -->
                    <when test="searchType == 'tc'">
                        AND (title   LIKE '%' || #{keyword} || '%'
                        OR  content LIKE '%' || #{keyword} || '%')
                    </when>

                    <!-- 그 외: 기본 = 제목+내용 -->
                    <otherwise>
                        AND (title   LIKE '%' || #{keyword} || '%'
                        OR  content LIKE '%' || #{keyword} || '%')
                    </otherwise>
                </choose>
            </if>

            <!--  검색어가 없을 때만 카테고리 필터 적용 (전체는 cate 없음) -->
            <if test="(keyword == null or keyword == '')
                      and cate != null and cate != ''">
                AND docCategory = #{cate}
            </if>

            <!--  사용중인 문서만 (필요 없으면 이 블록 삭제) -->
            <if test="true">
                AND status = 'Y'
            </if>

        </where>

        <!--  정렬: 기본 = 최신순 -->
        ORDER BY docId DESC

        <choose>
            <!-- TOP: cate 없음 + keyword 없음 → 최신 10개 -->
            <when test="(keyword == null or keyword == '')
                    and (cate == null or cate == '')">
                OFFSET 0 ROWS
                FETCH NEXT 10 ROWS ONLY
            </when>

            <!-- 카테고리 목록 / 검색 결과: 기존 페이징 -->
            <otherwise>
                OFFSET #{offset} ROWS
                FETCH NEXT #{size} ROWS ONLY
            </otherwise>
        </choose>
    </select>


    <!-- ===================== 필요서류 총 갯수 ===================== -->
    <select id="selectDocumentsTotal"
            parameterType="kr.co.busanbank.dto.PageRequestDTO"
            resultType="int">

        SELECT COUNT(*)
        FROM DOCUMENTS
        <where>

            <!--  검색어 있을 때: 목록과 동일한 조건 -->
            <if test="keyword != null and keyword != ''">
                <choose>
                    <when test="searchType == 'title'">
                        AND title LIKE '%' || #{keyword} || '%'
                    </when>
                    <when test="searchType == 'content'">
                        AND content LIKE '%' || #{keyword} || '%'
                    </when>
                    <when test="searchType == 'tc'">
                        AND (title   LIKE '%' || #{keyword} || '%'
                        OR  content LIKE '%' || #{keyword} || '%')
                    </when>
                    <otherwise>
                        AND (title   LIKE '%' || #{keyword} || '%'
                        OR  content LIKE '%' || #{keyword} || '%')
                    </otherwise>
                </choose>
            </if>

            <!--  검색어 없을 때만 cate 필터 -->
            <if test="(keyword == null or keyword == '')
                      and cate != null and cate != ''">
                AND docCategory = #{cate}
            </if>

            <!--  STATUS = 'Y' -->
            <if test="true">
                AND status = 'Y'
            </if>

        </where>
    </select>


    <!-- ===================== 필요서류 카테고리 코드 목록 ===================== -->
    <select id="selectDocumentCategories"
            resultType="kr.co.busanbank.dto.CodeDetailDTO">

        SELECT
        groupCode,
        code,
        codeName
        FROM CODEDETAIL
        WHERE groupCode = 'DOC_TYPE'
        AND useYn    = 'Y'
        AND status   = 'Y'
        ORDER BY TO_NUMBER(code)
    </select>


    <!-- ===================== 필요서류 상세 ===================== -->
    <select id="selectDocument"
            parameterType="int"
            resultType="kr.co.busanbank.dto.DocumentsDTO">

        SELECT
            docId,
            groupCode,
            docCategory,
            title,
            content,
            createdAt,
            updatedAt,
            status
        FROM DOCUMENTS
        WHERE docId = #{docId}
    </select>

</mapper>

